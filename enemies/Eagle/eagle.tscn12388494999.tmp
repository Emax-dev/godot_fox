script/source = "extends EnemyBase

@onready var changing_timer: Timer = $ChangingTimer
@onready var player_detect: RayCast2D = $PlayerDetect
@onready var animated_sprite_2d: AnimatedSprite2D = $AnimatedSprite2D

const FLY_SPEED:Vector2=Vector2(35,15)
var _fly_direction:Vector2=Vector2.ZERO

# Called every frame. 'delta' is the elapsed time since the previous frame.
func _physics_process(delta: float) -> void:
	super._physics_process(delta)
	velocity=_fly_direction
	move_and_slide()
func set_direction()->void:
var dir_x = sign(_player_ref.global_position.x-global_position.x)
	if dir_x>0:
		animated_sprite_2d.flip_h=true
	else:
		animated_sprite_2d.flip_h=false
		_fly_direction=Vector2(dir_x,1)*FLY_SPEED
	
func fly_to_player()->void:
	set_direction()
	changing_timer.start()
	
func _on_visible_on_screen_enabler_2d_screen_entered() -> void:
	animated_sprite_2d.play(\"fly\")
	fly_to_player()

 
func _on_changing_timer_timeout() -> void:
	fly_to_player()
"

